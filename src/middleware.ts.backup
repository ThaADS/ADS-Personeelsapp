import { NextResponse } from "next/server";
import type { NextRequest } from "next/server";

// Configuratie voor routes die geen authenticatie vereisen
const publicRoutes = ["/login", "/api/auth"];

export async function middleware(request: NextRequest) {
  const { pathname } = request.nextUrl;
  
  // Controleer of de huidige route een publieke route is
  if (publicRoutes.some(route => pathname.startsWith(route))) {
    return NextResponse.next();
  }

  // Redirect naar login als er geen sessie is
  // Tijdelijk: Alle niet-publieke routes redirecten naar login
  // Dit zorgt ervoor dat de login pagina weer beschikbaar is
  const url = new URL("/login", request.url);
  return NextResponse.redirect(url);
}

// Configureer de middleware om alleen te draaien op specifieke routes
export const config = {
  matcher: [
    /*
     * Match alle routes behalve:
     * 1. Alle statische bestanden (_next/static, favicon.ico, etc.)
     */
    "/((?!_next/static|_next/image|favicon.ico).*)",
  ],
};
